<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nouno.easydep_repairservice.Fragments.QueueFragment">
  <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swhipe_refresh_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ListView
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ListView>
      <TextView
          android:id="@+id/no_intervention"
          android:visibility="gone"
          android:fontFamily="sans-serif"
          android:layout_width="wrap_content"
          android:text="Aucune intervention en cours"
          android:layout_gravity="center"
          android:textColor="@color/colorPrimary"
          android:textSize="16sp"
          android:layout_height="wrap_content" />
      <TextView
          android:id="@+id/no_connection"
          android:visibility="gone"
          android:fontFamily="sans-serif"
          android:layout_width="wrap_content"
          android:text="Erreur connexion au serveur impossible"
          android:layout_gravity="center"
          android:textColor="@color/colorPrimary"
          android:textSize="16sp"
          android:layout_height="wrap_content" />
    </FrameLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        app:fabSize="normal"
        app:backgroundTint="@color/greenPrimary"
        android:src="@drawable/ic_add_24dp"
        android:layout_height="wrap_content" />

</android.support.design.widget.CoordinatorLayout>
