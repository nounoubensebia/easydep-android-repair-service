<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nouno.easydep_repairservice.Fragments.MyAccountFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ProgressBar
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:id="@+id/progressBar"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/info_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:id="@+id/name_layout"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Bensebia Noureddine"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />


        </LinearLayout>
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_below="@id/name_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_account_circle_green_24dp"/>
    </RelativeLayout>

        <View
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="4dp"
            android:background="#f1f1f1"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/password_text"
                android:layout_width="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Mot de passe"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="123456"
                    android:inputType="textPassword"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="28dp"
                android:layout_alignTop="@id/password_text"
                android:src="@drawable/ic_vpn_key_black_24dp"
                android:layout_height="28dp" />

        </RelativeLayout>
        <View
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="4dp"
            android:background="#f1f1f1"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/phone_texts"
                android:layout_width="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Mon numéro de téléphone"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="05672349"
                    android:id="@+id/phone_text"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="28dp"
                android:layout_alignTop="@id/phone_texts"
                android:src="@drawable/ic_local_phone_red_24dp"
                android:layout_height="28dp" />

        </RelativeLayout>
        <View
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="4dp"
            android:background="#f1f1f1"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/price_texts"
                android:layout_width="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Mes tarifs"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="50Da/Km"
                    android:id="@+id/price_text"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="28dp"
                android:layout_alignTop="@id/price_texts"
                android:src="@drawable/ic_monetization_on_black_24dp"
                android:layout_height="28dp" />

        </RelativeLayout>
        <View
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:background="#f1f1f1"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/status_texts"
                android:layout_width="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Mon statut"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="disponible"
                    android:id="@+id/status_text"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="28dp"
                android:layout_alignTop="@id/status_texts"
                android:src="@drawable/ic_do_not_disturb_on_black_24dp"
                android:layout_height="28dp" />

        </RelativeLayout>
        <View
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:background="#f1f1f1"
            android:layout_height="1dp"/>
        <RelativeLayout

            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/positions_text"
                android:layout_width="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Ma positon"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="300dp"
                    android:maxLines="10"
                    android:text="Cité zerhouni mokhtar (Détection automatique)"
                    android:id="@+id/position_text"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="28dp"
                android:layout_alignTop="@id/positions_text"
                android:src="@drawable/ic_my_location_black_24dp"
                android:layout_height="28dp" />

        </RelativeLayout>
        <View
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:background="#f1f1f1"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/logout_layout"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/logout_texts"
                android:layout_width="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Se déconnecter"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp" />

            </LinearLayout>

            <ImageView
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="28dp"
                android:layout_alignTop="@id/logout_texts"
                android:src="@drawable/ic_exit_to_app_black_24dp"
                android:layout_height="28dp" />

        </RelativeLayout>


    </LinearLayout>
    </LinearLayout>

</ScrollView>
