<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nouno.easydep_repairservice">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyAmYvO7yTRJbWVCYK1B1Rp3CDOwwictb-c" />

        <activity
            android:name=".MainActivity"
            android:label="EasyDep">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateAssistanceRequestActivity"
            android:label="Nouvelle Demande"
            android:noHistory="true"
            android:theme="@style/RequestTheme" />
        <activity
            android:name=".LocationSearchActivity"
            android:label="Rechercher position"
            android:noHistory="true"
            android:theme="@style/SignupTheme" />
        <activity
            android:name=".HeavyAssistanceRequestActivity"
            android:theme="@style/RequestTheme" />
        <activity
            android:name=".AssistanceRequestInfoActivity"
            android:label="@string/title_activity_assistance_request_info"
            android:parentActivityName=".MainActivity"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nouno.easydep_repairservice.MainActivity" />
        </activity>
        <activity android:name=".EstimateActivity"
            android:label="Devis"
            android:noHistory="true"
            android:theme="@style/SignupTheme"></activity>
    </application>

</manifest>